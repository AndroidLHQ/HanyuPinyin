<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/dp_5"
              android:paddingRight="@dimen/dp_5"
              android:paddingTop="@dimen/dp_10"
              android:paddingBottom="@dimen/dp_10"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_voice_name"
        android:text="西班牙语："
        android:textSize="@dimen/sp_12"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"/>

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/pb_voice_speak"
        android:layout_weight="1"
        android:layout_width="0dp"
        app:mpb_progressBackgroundTint="@color/light_blue"
        android:progressTint="@color/dark_blue"
        app:mpb_progressStyle="horizontal"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_voice_speak"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@drawable/btn_speak_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>